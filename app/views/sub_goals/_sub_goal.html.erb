<%= form_for :sub_goal, url: "/goals/#{@goal.id}/sub_goals/#{sub_goal.id}", html: {method: 'patch'}, remote: true do |f| %>
  <% if sub_goal.completed == false %>
    <%= f.button :completed, class: "complete-button" %>
    <%= f.label :completed, sub_goal.content, class: "incomplete"%>
  <% else %>
    <%= f.label :completed, sub_goal.content, class: "completed-strike"%>
  <% end %>

<% end %>