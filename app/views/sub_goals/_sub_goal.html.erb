<%= form_for :sub_goal, url: "/goals/#{@goal.id}/sub_goals/#{sub_goal.id}", html: {method: 'patch', id: "#{sub_goal.id}"}, remote: true do |f| %>
  <% if sub_goal.complete == false %>
    <%= f.button :complete, class: "complete-button"  %>
    <%= f.label :complete, sub_goal.content, class: "incomplete"%>
  <% else %>
    <%= f.label :complete, sub_goal.content, class: "completed-strike"%>
  <% end %>

<% end %>